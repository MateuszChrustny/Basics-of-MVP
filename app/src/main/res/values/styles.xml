<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ListItemTwoLine">
        <item name="android:minHeight">@dimen/list_item_two_line_height</item>
        <item name="android:paddingStart">@dimen/list_item_two_line_padding</item>
        <item name="android:paddingEnd">@dimen/list_item_two_line_padding</item>
    </style>
    <style name="PrimaryText">
        <item name="android:textSize">@dimen/primary_text_font_size</item>
        <item name="android:textColor">@color/black87</item>
    </style>
    <style name="SecondaryText">
        <item name="android:textSize">@dimen/secondary_text_font_size</item>
        <item name="android:textColor">@color/black54</item>
    </style>
</resources>
